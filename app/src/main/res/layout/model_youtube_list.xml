<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lytYoutube"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_normal_half"
    android:layout_marginStart="@dimen/margin_normal_half"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/image_view_list"
        android:layout_height="@dimen/image_view_list"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_normal_half"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_small"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lytText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/margin_very_small"
            android:layout_toStartOf="@+id/lytIcons"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="marquee"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/margin_very_small"
                android:singleLine="true"
                android:text="Test"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/margin_very_small"
                android:singleLine="true"
                android:text="Test"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_36dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>