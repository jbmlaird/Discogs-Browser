<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/lytListing"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginEnd="@dimen/margin_normal"
                                             android:layout_marginStart="@dimen/margin_normal"
                                             android:orientation="vertical">

    <TextView
        android:id="@+id/tvReleaseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/margin_normal_half"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Joy O &amp; Boddika - Dun Dun"
        android:textSize="@dimen/text_normal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDatePosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/margin_normal_half"
        android:layout_marginTop="@dimen/margin_normal_half"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Last Activity"
        android:textSize="@dimen/text_normal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tvReleaseName"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal_half"
        android:layout_marginRight="0dp"
        android:layout_marginTop="@dimen/margin_normal_half"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>