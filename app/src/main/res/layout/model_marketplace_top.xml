<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/margin_normal"
              android:layout_marginStart="@dimen/margin_normal"
              android:layout_marginTop="@dimen/margin_normal_half"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal_half"
            android:layout_toStartOf="@+id/ivImage"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="3"
            android:maxLines="3"
            android:text="Joy Orbison"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/image_view_loading_large"
            android:layout_height="@dimen/image_view_loading_large"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_normal_half"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItemName"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal_half"
            android:layout_toStartOf="@+id/ivImage"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:maxLines="1"
            android:text="Â£3.00"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            />

    </RelativeLayout>


</LinearLayout>