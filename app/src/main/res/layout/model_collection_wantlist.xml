<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/margin_normal"
              android:layout_marginStart="@dimen/margin_normal"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnCollection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_thin"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/margin_normal_half"
        android:background="@drawable/button_collection"
        android:text="@string/add_to_collection"
        android:textColor="@color/colorPrimary"
        app:spinning_bar_color="@color/colorPrimary"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="@dimen/padding_small"/>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnWantlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_thin"
        android:layout_marginBottom="@dimen/margin_normal_half"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/button_wantlist"
        android:text="@string/add_to_wantlist"
        android:textColor="@color/colorAccent"
        app:spinning_bar_color="@color/colorAccent"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="@dimen/padding_small"/>
    <!--android:background="@drawable/circular_border_shape"-->

</LinearLayout>