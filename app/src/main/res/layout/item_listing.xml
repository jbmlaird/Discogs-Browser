<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_very_small"
    android:layout_marginEnd="@dimen/margin_normal"
    android:layout_marginStart="@dimen/margin_normal"
    android:layout_marginTop="@dimen/margin_very_small"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lytMarketplaceItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal_half"
        >

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tvMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal_half"
            android:layout_marginRight="@dimen/margin_normal_half"
            android:padding="@dimen/padding_small"
            android:text="test"
            android:textSize="@dimen/text_small"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvSeller"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tvSleeve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="test"
            android:textSize="@dimen/text_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMedia"/>

        <TextView
            android:id="@+id/tvShipsFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal_half"
            android:layout_marginRight="@dimen/margin_normal_half"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvConvertedPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvSleeve"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/tvSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text=""
            android:textSize="@dimen/text_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text=""
            android:textSize="@dimen/text_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSeller"/>

        <TextView
            android:id="@+id/tvConvertedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvListedPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvRating"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/tvListedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating"
            app:layout_constraintVertical_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>